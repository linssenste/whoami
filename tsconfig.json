{
	"extends": "./.nuxt/tsconfig.json",
	"compilerOptions": {
	  "baseUrl": ".", 
	  "paths": {
		"~/*": ["./*"], 
		"@/*": ["./*"]
	  },
	  "strict": true, 
	  "esModuleInterop": true, 
	  "allowSyntheticDefaultImports": true, 
	  "resolveJsonModule": true, 
	  "lib": ["DOM", "DOM.Iterable", "ESNext"],
	  "types": ["@types/node"] 
	},
	"include": [
	  "./**/*.ts", 
	  "./**/*.d.ts", 
	  "./**/*.tsx",
	  "./**/*.vue"
	],
	"exclude": [
	  "node_modules",
	  ".nuxt",
	  "dist" 
	]
  }
  